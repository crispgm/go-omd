#!/usr/bin/env ruby

argv = ARGV.dup
argv_extra = []

if idx = argv.index("--")
    argv_extra = argv.slice(idx+1, argv.length-2)
    argv = argv.slice(0, idx)
end

if argv.include?("--version")
    require_relative "../lib/olympia/version"
    puts "Olympia #{Omd::VERSION}"
    exit 0
end

begin

    require 'sinatra'

    def home
        "Index"
    end

    def about
        "About"
    end

    get '/' do
        home
    end

    get '/about' do
        about
    end

end
