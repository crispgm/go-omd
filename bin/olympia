#!/usr/bin/env ruby

argv = ARGV.dup
argv_extra = []

if idx = argv.index("--")
    argv_extra = argv.slice(idx+1, argv.length-2)
    argv = argv.slice(0, idx)
end

if argv.include?("--version")
    require_relative "../lib/olympia/version"
    puts "Olympia #{Olympia::VERSION}"
    exit 0
end

begin

    require 'sinatra'
    require_relative "../lib/olympia/camera"

    set :public_folder, settings.root + '/../public'
    set :views, settings.root + '/../templates'
    set :bind, '0.0.0.0'
    set :port, 9494

    def home
        caminfo = Olympia::Camera.getCamInfo
        if caminfo.eql? "Olympia: NET ERROR"
            caminfo = "&lt;Device Not Connected&gt;"
        end
        erb :index, :locals => {:title => 'Home', :caminfo => caminfo}
    end

    def about
        "About"
    end

    get '/' do
        home
    end

    get '/about' do
        about
    end

    def list
        Olympia::Camera.getImgList
    end

    get '/list' do
        list
    end

    def info
        Olympia::Camera.getCamInfo
    end

    get '/info' do
        info
    end
end
